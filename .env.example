# Environment Variables Template
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Azure Storage (Module 03 - Blob Storage)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONTAINER_NAME=product-images

# Azure Cosmos DB (Module 04)
COSMOS_DB_ENDPOINT=
COSMOS_DB_KEY=
COSMOS_DB_DATABASE_NAME=ecommerce
COSMOS_DB_CONTAINER_NAME=products

# Azure AD / Microsoft Identity Platform (Module 05)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
JWT_SECRET=your-jwt-secret-key-here

# Azure Key Vault (Module 06)
AZURE_KEY_VAULT_URL=

# Azure App Configuration (Module 07)
AZURE_APP_CONFIG_CONNECTION_STRING=

# Azure Application Insights (Module 11)
APPLICATIONINSIGHTS_CONNECTION_STRING=
APPINSIGHTS_INSTRUMENTATIONKEY=

# Database Connection (if using SQL Database in advanced modules)
DATABASE_URL=

# Redis Cache (if implementing caching)
REDIS_CONNECTION_STRING=

# Service Bus (Module 10)
SERVICE_BUS_CONNECTION_STRING=
SERVICE_BUS_QUEUE_NAME=orders

# Event Hub (Module 09)
EVENT_HUB_CONNECTION_STRING=
EVENT_HUB_NAME=order-events

# API Management (Module 08)
APIM_SUBSCRIPTION_KEY=

# Feature Flags (Module 07)
FEATURE_FLAG_CART_ENABLED=true
FEATURE_FLAG_CHECKOUT_ENABLED=true
FEATURE_FLAG_USER_REGISTRATION=true

# External APIs
PAYMENT_GATEWAY_API_KEY=
EMAIL_SERVICE_API_KEY=

# Security
CORS_ORIGINS=http://localhost:3000,https://your-domain.azurewebsites.net
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here